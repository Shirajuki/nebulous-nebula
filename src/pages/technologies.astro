---
import Layout from "../layouts/Layout.astro";
import CardGrid from "../components/CardGrid";
import Hero from "../components/Hero";
import SectionGallery from "../components/SectionGallery";
---

<Layout title="Bun+Astro | technologies">
  <main class="flex flex-col">
    <Hero />

    <section>
      <h2 class="py-3 text-4xl text-gradient ![background-size:30%]">
        Technologies
      </h2>
      <CardGrid client:load />
    </section>

    <div>
      <p class="text-gradient fancy-font text-4xl text-center my-6">. . .</p>
    </div>

    <SectionGallery client:visible />
  </main>
</Layout>

<style>
  main {
    margin: auto;
    padding: 1rem;
    width: calc(100% - 2rem);
    max-width: 800px;
    min-height: calc(100vh - 4rem);
    line-height: 1.6;
  }
</style>
